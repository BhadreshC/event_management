<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="container-fluid">
      <div class="row">
        <p id="notice"><%= notice %></p>
        <div class="col-12">
          <div class="text-right mb-2">
            <%= link_to 'New Event', new_event_path, class: "btn btn-info"  %>
          </div>
          <div class="card">
            <div class="card-body">
              <h4 class="text-center">YOUR EVENTS</h4>
              <div class="table-responsive">
                <table id="zero_config" class="table table-striped table-bordered no-wrap">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Venue</th>
                      <th>Start date</th>
                      <th>End date </th>
                      <th colspan="3" class="text-center">Action </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @events.each do |event| %>
                      <tr>
                        <td><%= event.title %></td>
                        <td><%= event.venue %></td>
                        <td><%= event.start_date %></td>
                        <td><%= event.end_date %></td>
                         <% if current_user.admin? %>
                          <td><%= link_to 'Show', event, class: "btn waves-effect waves-light btn-rounded btn-outline-info"%></td>
                          <td><%= link_to 'Edit', edit_event_path(event), class: "btn waves-effect waves-light btn-rounded btn-outline-warning" %></td>
                          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect waves-light btn-rounded btn-outline-danger"%></td>
                          <% else %>
                          <td colspan="2" class="text-center"><%= link_to 'Show', event, class: "btn waves-effect waves-light btn-rounded btn-outline-info"%></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>