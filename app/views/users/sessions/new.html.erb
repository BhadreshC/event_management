<div class="main-wrapper">
  <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative" style="background:url(<%= asset_path('auth-bg.jpg')%>) no-repeat center center;">
    <div class="auth-box row">
      <div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url(<%= asset_path('3.jpg')%>);">
      </div>
      <div class="col-lg-5 col-md-7 bg-white">
        <div class="p-3">
          <div class="text-center">
            <%= image_tag asset_path('icon.png') %>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'mt-4'}) do |f| %>
            <h2 class="mt-3 text-center">Sign In</h2>
            <p class="text-center">Enter your email address and password to access admin panel.</p>
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="text-dark" for="uname">Username</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email" %>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="text-dark" for="pwd">Password</label>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Password"%>
                </div>
              </div>
              <div class="col-lg-12 text-center">
                <%= f.submit "Sign In", class: 'btn btn-block btn-dark' %>
              </div>
              <div class="col-lg-12 text-center mt-5">
                Don't have an account? <%= link_to "Sign Up", new_registration_path(resource_name), class: 'text-danger' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>